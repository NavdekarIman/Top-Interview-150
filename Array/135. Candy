class Solution {
    public int candy(int[] ratings) {
        int n = ratings.length;
        if( n == 0 ) return 0;
        int[] candies = new int[n];
        //Step1 - allocate atleast 1 candy 
        for( int i = 0 ; i < n ; i++ ){
            candies[i] = 1;
        }
        //Step 2 - if second one have higher value then 1 st get less candies
        // left to right
        for(int i = 1 ; i < n ; i++ ){
            if( ratings[i] > ratings[i-1]){
                candies[i] = candies[i-1] + 1;
            }
        }
        //Step 3 - finaly traverse only take the max value
        //right to left
        for( int i = n-2 ; i >= 0 ; i-- ){
           if( ratings[i] > ratings[i+1]){
                candies[i] = Math.max( candies[i] ,candies[i + 1] + 1);
            } 
        }
        //know the candies array have the final allocation of candies
        int totalCandy = 0;
        for( int i : candies){
            totalCandy += i;
        }
        return totalCandy;
    }
}    